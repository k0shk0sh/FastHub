<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/commentOptions"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_normal"
    android:background="?card_background"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:outlineProvider="background"
    android:paddingBottom="@dimen/spacing_xs_large"
    android:paddingStart="@dimen/spacing_xs_large"
    android:paddingTop="@dimen/spacing_xs_large"
    tools:ignore="RtlSymmetry"
    tools:showIn="@layout/comments_row_item">


    <HorizontalScrollView
        android:id="@+id/emojiesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/commentMenu">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/thumbsUp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/thumbsDown"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/laugh"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/hurray"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/sad"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

            <com.fastaccess.ui.widgets.FontTextView
                android:id="@+id/heart"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                tools:text="100"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/commentMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_normal"
        android:src="@drawable/ic_overflow"/>
</RelativeLayout>