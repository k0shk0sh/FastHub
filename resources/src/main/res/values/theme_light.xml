<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="lightWindowBackground">#fff</color>
    <color name="lightDivider">#80949494</color>
    <color name="light_patch_addition_color">#CCFFCC</color>
    <color name="light_patch_deletion_color">#FFDDDD</color>
    <color name="light_patch_ref_color">#EEEEEE</color>
    <color name="light_accent">#2962FF</color>
    <color name="light_primary">#FAFAFA</color>
    <color name="light_primary_dark">#FAFAFA</color>


    <style name="ThemeLight" parent="ThemeLight.Base" />

    <style name="ThemeLight.Base" parent="Theme.Light.NoActionBar">
        <item name="chip_background">@color/lightWindowBackground</item>
        <item name="icon_color">#212121</item>
        <item name="card_background">@color/cardview_light_background</item>
        <item name="comment_box_style">@style/CommentBoxLight</item>
        <item name="timeLineBackground">@style/TimeLineBackgroundLight</item>
        <item name="patch_addition">@color/light_patch_addition_color</item>
        <item name="patch_deletion">@color/light_patch_deletion_color</item>
        <item name="patch_ref">@color/light_patch_ref_color</item>
        <item name="dividerColor">@color/lightDivider</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorTertiary">#686868</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:colorEdgeEffect">?colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:dialogTheme">@style/DialogThemeLight</item>
        <item name="android:alertDialogTheme">@style/DialogThemeLight</item>
        <item name="android:toolbarStyle">@style/ToolbarStyleLight</item>
        <item name="android:navigationBarColor">@color/lightWindowBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorPrimaryVariant">@color/light_primary_dark</item>
        <item name="colorSecondary">@color/light_accent</item>
        <item name="colorSecondaryVariant">#FF1E59FC</item>

        <item name="android:colorBackground">@color/lightWindowBackground</item>
        <item name="android:windowBackground">@color/lightWindowBackground</item>
        <item name="colorSurface">@color/lightWindowBackground</item>
        <item name="colorError">@color/material_red_700</item>

        <item name="colorOnPrimary">#212121</item>
        <item name="colorOnSecondary">#212121</item>
        <item name="colorOnBackground">#212121</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:toolbarStyle">@style/ToolbarStyleLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="card_background">@color/cardview_light_background</item>
        <item name="icon_color">#212121</item>
        <item name="comment_box_style">@style/CommentBoxLight</item>
        <item name="timeLineBackground">@style/TimeLineBackgroundLight</item>
        <item name="patch_addition">@color/light_patch_addition_color</item>
        <item name="patch_deletion">@color/light_patch_deletion_color</item>
        <item name="patch_ref">@color/light_patch_ref_color</item>
        <item name="dividerColor">@color/lightDivider</item>
        <item name="android:windowBackground">@color/lightWindowBackground</item>
        <item name="colorAccent">@color/light_accent</item>
    </style>

    <style name="AppTheme.AboutActivity.Light" parent="ThemeLight">
        <item name="colorAccent">@color/light_accent</item>
        <item name="mal_lightActionBar">true</item>
        <item name="mal_popupOverlay">@style/Theme.Mal.Light.PopupOverlay</item>
        <item name="mal_color_primary">#212121</item>
        <item name="mal_color_secondary">#727272</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="mal_card_background">@color/cardview_light_background</item>
    </style>

    <style name="ToolbarStyleLight">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">#42000000</item>
        <item name="popupTheme">@style/PopupThemeLight</item>
    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/lightWindowBackground</item>
    </style>

    <style name="TimeLineBackgroundLight">
        <item name="android:background">@drawable/ic_timeline_arrow_left</item>
    </style>

    <style name="CommentBoxLight">
        <item name="android:background">@drawable/ic_edittext</item>
    </style>

</resources>